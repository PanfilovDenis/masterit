!!! 5
%html(lang="ru")
  = render 'layouts/web/shared/head'
  %body

    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="#") Masterit
          .container.nav-collapse
            %ul.nav.pull-right

              - if user_signed_in?
                - if current_user.role? :admin
                  %li= link_to "Админка", rails_admin_path
                
                %li= link_to "Личный кабинет", user_path(current_user)
                %li= link_to "Каталог работ", works_path

                %li= link_to "Выход", destroy_user_session_path, :method => :delete
              -else
                %li= link_to "Вход", new_user_session_path


    .container
      .content
        = bootstrap_flash
        = yield


      = render 'layouts/web/shared/footer'
